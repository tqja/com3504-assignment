<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Navigation Bar with Logo</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>

<nav>
  <div class="logo-container">
    <span id="company-name"><span class="green">P</span>lant<span class="green">P</span>al</span>
  </div>
  <ul>
    <li><a href="#view-observations">View My Observations</a></li>
    <li><a href="/create">Create Observation</a></li>
    <li><a href="#explore">Explore</a></li>
  </ul>
</nav>

<h1>Sightings Feed</h1>
<div class="content-container">
  <div class="sidebar">
    <h2>Filters:</h2>
    <!-- Sunlight Exposure Filter Toggle Button -->
    <button class="dropbtn" onclick="toggleFilter('sunlightFilter')">Sunlight Exposure &#9660;</button>
    <!-- Sunlight Exposure Filter Options -->
    <div id="sunlightFilter" class="filter-content">
      <div class="sunlight-filter">
        <input type="radio" id="sunlight-no-preference" name="sunlight" value="no-preference" checked>
        <label for="sunlight-no-preference">
          <img src="/photos/sun-no-preference.png" alt="No preference">
        </label>

        <input type="radio" id="sunlight-full" name="sunlight" value="full">
        <label for="sunlight-full">
          <img src="/photos/sun-full.png" alt="Full sun">
        </label>

        <input type="radio" id="sunlight-partial" name="sunlight" value="partial">
        <label for="sunlight-partial">
          <img src="/photos/sun-partial.png" alt="Partial shade">
        </label>

        <input type="radio" id="sunlight-full-shade" name="sunlight" value="full-shade">
        <label for="sunlight-full-shade">
          <img src="/photos/sun-full-shade.png" alt="Full shade">
        </label>
      </div>
    </div>
    <!-- Placeholder for Additional Filters -->
    <!-- Add more filters here using the same structure as above -->
    <!-- Has Flowers Filter Toggle Button -->
    <br>
    <br>
    <button class="dropbtn" onclick="toggleFilter('flowersFilter')">Has Flowers &#9660;</button>
    <!-- Has Flowers Filter Options -->
    <div id="flowersFilter" class="filter-content">
      <div class="sunlight-filter"> <!-- Reuse the same class for consistent styling -->
        <input type="radio" id="flowers-no-preference" name="flowers" value="no-preference" checked>
        <label for="flowers-no-preference">
          <img src="/photos/sun-no-preference.png" alt="No preference">
        </label>

        <input type="radio" id="flowers-yes" name="flowers" value="yes">
        <label for="flowers-yes">
          <img src="/photos/flower-yes.png" alt="Has flowers">
        </label>

        <input type="radio" id="flowers-no" name="flowers" value="no">
        <label for="flowers-no">
          <img src="/photos/flower-no.png" alt="Does not have flowers">
        </label>
      </div>
    </div>


  </div>


  <div class="photo-grid">
    <% if (data) { data.forEach(observation => { %>
      <div class="photo-item">
        <a href="/observations/<%= observation._id %>" style="width: 200px;">
          <img src="<%= observation.image %>">
        </a>
        <div class="description-container">
          <span class="photo-description"><%= observation.name %></span>
        </div>
      </div>
    <% });} %>
  </div>

</div>
<script>
  function toggleFilter(filterId) {
    var filter = document.getElementById(filterId);
    if (filter.style.display === "block") {
      filter.style.display = "none";
    } else {
      filter.style.display = "block";
    }
  }
</script>
<script src="/javascripts/index.js"></script>
<script src="/javascripts/idb_util.js"></script>
</body>
</html>
